    </div>

    <form action="/main_page/filter" method="POST">
        <div class="filter_form">
            <div class="selected_date_topic">
                <i class="fa-regular fa-clock"></i> เลือกช่วงวันได้เลยน้า
            </div>
            <div class="selected_date_form">
                
                ตั้งเเต่วันที่
                <input class="form-control" type="date" name="selected_start_date" id="selected_start_date" value="<%= (new Date()).toLocaleDateString('en-GB', { day: '2-digit', month: '2-digit', year: 'numeric' }).split('/').reverse().join('-') %>">
                ถึง
                <input class="form-control" type="date" name="selected_end_date" id="selected_end_date" value="<%= (new Date()).toLocaleDateString('en-GB', { day: '2-digit', month: '2-digit', year: 'numeric' }).split('/').reverse().join('-') %>">
                <button style="width: 10rem;" type="submit" name="filter_submit" id="filter_submit" class="btn btn-primary">กรอง</button>
            </div>
            <!-- <div class="filter_btn">
                <button type="submit" name="filter_submit" id="filter_submit" class="btn btn-primary">กรอง</button>
            </div> -->
        </div>
    </form>

    <div class="expense_detail">
        <div class="header">
            <div class="header-item1">
                <p>วัน/เดือน/ปี</p>
            </div>
            <div class="header-item2">
                <p>หมวดหมู่</p>
            </div>
            <div class="header-item3">
                <p>รายการ</p>
            </div>
            <div class="header-item4">
                <p>ราคา (บาท)</p>
            </div>
            <div class="header-item5">
                <p>จัดการ</p>
            </div>
        </div>
        
        <form action="/main_page/submit" method="POST">
            <div class="detail">
                <div class="detail-item1">
                    <input class="form-control" type="date" name="date" id="date" value="<%= (new Date()).toLocaleDateString('en-GB').split('/').reverse().join('-') %>">
                </div>
                <div class="detail-item2">
                    <select name="category" id="category" class="form-control">
                        <option value="สำคัญ"><i class="fa fa-car"></i> สำคัญ</option>
                        <option value="ของใช้">ของใช้</option>
                        <option value="ข้างนอก">ข้างนอก</option>
                        <option value="ดีต่อใจ">ดีต่อใจ</option>
                        <option value="สุขภาพ">สุขภาพ</option>
                        <option value="ทำกินเอง">ทำกินเอง</option>
                        <option value="ประกัน">ประกัน</option>
                        <option value="เติม/ถอน">เติม/ถอน</option>
                        <option value="มิลิน">มิลิน</option>
                        <option value="อู๋">อู๋</option>
                        <option value="ช้อปปิ้ง">ช้อปปิ้ง</option>
                        <option value="อื่นๆ">อื่นๆ</option>
                        <option value="กินเล่น">กินเล่น</option>
                    </select>
                </div>
                <div class="detail-item3">
                    <textarea name="detail" id="detail"></textarea>
                </div>
                <div class="detail-item4">
                    <input type="number" name="price" id="price" value="">
                </div>
                <div class="detail-item5">
                    <!-- <textarea name="remark" id="remark"></textarea> -->
                </div>
            </div>
            <div class="submit_btn" id="submit_btn">
                <button type="submit" class="btn btn-success">บันทึก</button>
            </div>
        </form>
        <% get_all_datas.forEach((all_data) => { %>
            <div class="history">
                <div class="history-item1">
                    <p><%= all_data.date.toLocaleDateString('en-GB') %></p>
                </div>
                <div class="history-item2">
                    <p><%= all_data.category %></p>
                </div>
                <div class="history-item3">
                    <p><%= all_data.detail %></p>
                </div>
                <div class="history-item4">
                    <p><%= all_data.price %></p>
                </div>
                <div class="history-itemุ">
                    <div class="id" id="id" hidden>

                </div class="history-item6">
                    <a href="/main_page/delete?id=<%= all_data.id %>" class="btn btn-danger">ลบ</a>
                </div>
            </div>
        <% }) %>
        <div class="sum_history">
            <div class="history-item1">
                <p>รวมราคา</p>
            </div>
            <div class="history-item2">
      
            </div>
            <div class="history-item3">
  
            </div>
            <div class="history-item4">
                <p><%= get_sum[0].sum %></p>
            </div>
            <div class="history-item5">
                <div class="id" id="id" hidden>

                </div>
                <p>บาท</p>
            </div>
        </div>
    </div>


    <script>
        let priceDatas = [];
        let categoryDatas = [];
        <% get_sum_category.forEach((row, index) => { %> 
            priceDatas.push(<%= row.sum %>);
            categoryDatas.push('<%= row.category %>');
        <% }) %>

        console.log(categoryDatas);

        const data = {
            labels: categoryDatas,
            datasets: [{
              label: 'My First Dataset',
              data: priceDatas,
              backgroundColor: [
                'rgb(255, 99, 132)',
                'rgb(54, 162, 235)',
                'rgb(255, 205, 86)'
              ],
              hoverOffset: 4
            }]
          };
        
          const config = {
            type: 'pie',
            data: data,
          };
        
          var myPieChart = new Chart(
            document.getElementById('myPieChart'),
            config
          );

         // Get the selected start date from local storage
        var selectedStartDate = localStorage.getItem("selectedStartDate");

        // Set the value of the start date input field
        var startDateInput = document.getElementById("selected_start_date");
        if (selectedStartDate) {
            startDateInput.value = selectedStartDate;
        } else {
            // Set the start date to the current date
            var currentDate = new Date().toISOString().split("T")[0];
            startDateInput.value = currentDate;
        }

        // Add event listener to the form submit event
        var form = document.querySelector("form");
        form.addEventListener("submit", function(event) {
            // Store the selected start date in local storage
            localStorage.setItem("selectedStartDate", startDateInput.value);
        });

        // Add event listener to the page load event
        window.addEventListener("load", function() {
            // Clear the selected start date from local storage when the page is refreshed
            localStorage.removeItem("selectedStartDate");
        });
    
      </script>
    
